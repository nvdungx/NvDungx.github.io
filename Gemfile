source "https://rubygems.org"

gem "jekyll"
gem "jekyll-gist"
gem "jekyll-paginate"
gem "jekyll-seo-tag"
gem 'jekyll-target-blank'
gem "jekyll-archives"
gem "jekyll-sitemap"
gem "jekyll-redirect-from"
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

install_if -> { RUBY_PLATFORM =~ %r!mingw|mswin|java! } do
  gem "tzinfo", "~> 1.2"
  gem "tzinfo-data"
end
